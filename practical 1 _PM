#include<iostream>
using namespace std;
double area(double r)
{
return 3.14*r*r;
}
double area(double a, double b)
{
return (a*b)/2; 
}
int main()
{
double x;
double p, q;
cout<<"\n Enter the value of x:"; cin>>x;
cout<<"\n Area of 
Circle="<<area(x);
cout<<"\n ****";
cout<<"\n Enter the value of 
p&q:";
cin>>p>>q;
cout<<"\n Area of 
Traingle="<<area(p,q);
return 0;
}
